<Gauge2 coordWidth="1000" coordHeight="1000" width="0" height="0" left="0" top="0" bottom="0" right="0">

  <!-- Background -->
  <Gauge2CircularBorder width="1000" height="1000" centerX="500" centerY="500" strokeWidth="0">
    <Gauge2CircularBorder.Filler>
      <Gauge2RingGradientFiller color1="#4F4F4F" color2="#CFCFCF" thickness="5" highlightCenter="50"/>
    </Gauge2CircularBorder.Filler>
  </Gauge2CircularBorder>
  <Gauge2CircularBorder width="895" height="895" centerX="500" centerY="500" strokeWidth="5" stroke="#333333">
    <Gauge2CircularBorder.Filler>
      <Gauge2RingGradientFiller  color1="#DDDDDD" color2="#BBBBBB" xpos="50" ypos="50" thickness="15" highlightCenter="100"/>
    </Gauge2CircularBorder.Filler>
  </Gauge2CircularBorder>

  <!-- Label background -->
  <Gauge2RectangularBorder centerX="500" centerY="750" width="250" height="150" stroke="#53A6A6" strokeWidth="2" arcSize="20">
    <Gauge2RectangularBorder.Filler>
      <Gauge2LinearGradientFiller color1="#234747" color2="#162C2C" angle="0"/>
    </Gauge2RectangularBorder.Filler>
  </Gauge2RectangularBorder>

  <!-- Label -->
  <Gauge2Label id="label" text="10" font="110 Arial Black" foreColor="#00B5A2" x="480" y="742" anchorHorizontal="center" anchorVertical="center"/>

  <!-- Label -->
  <Gauge2Label  text="" font="90 Verdana" foreColor="#707070" x="500" y="600" anchorHorizontal="center" anchorVertical="center"/>

  <!-- Range -->
  <Gauge2RadialRange centerX="500" centerY="500" width="1000" height="1000" startAngle="-135" endAngle="135">

    <!-- Scale -->
    <Gauge2RadialScale radius="350" startValue="0" endValue="100">
      <!-- Scale Selection -->
      <!--<Gauge2RadialScaleSection id="redSec" sectionWidth="100" color="#EC0000" stroke="#555555" strokeWidth="7" radius="300" startValue="0" endValue="35"/>
      <Gauge2RadialScaleSection id="yellSec" sectionWidth="100" color="#FFFF00" stroke="#555555" strokeWidth="7" radius="300" startValue="35" endValue="65"/>
      <Gauge2RadialScaleSection id="greenSec" sectionWidth="100" color="#99CC00" stroke="#555555" strokeWidth="7" radius="300" startValue="65" endValue="100"/>-->
      
      <Gauge2RadialScaleSection id="redSec" sectionWidth="100" color="#EC0000" stroke="#555555" strokeWidth="7" radius="300" startValue="0" endValue="0"/>
      <Gauge2RadialScaleSection id="yellSec" sectionWidth="100" color="#FFFF00" stroke="#555555" strokeWidth="7" radius="300" startValue="0" endValue="0"/>
      <Gauge2RadialScaleSection id="greenSec" sectionWidth="100" color="#99CC00" stroke="#555555" strokeWidth="7" radius="300" startValue="0" endValue="0"/>
    </Gauge2RadialScale>

    <!-- Ticks -->
    <Gauge2RadialTicks tickWidth="2" tickLength="10" color="#9999BB" tickCount="61" radius="300"/>
    <Gauge2RadialTicks tickWidth="5" tickLength="30" color="#9999BB" tickCount="0" radius="300" colorFunction="return v/10>=0.65?'green':'red';"/>
    
    <!-- Scale -->
    <!--<Gauge2RadialScale font="35 Verdana" foreColor="#222222" radius="290" startValue="0" endValue="160" labelCount="9"/>-->
    
    <!-- Scale -->
    <!--<Gauge2RadialScale font="50 Verdana" foreColor="green" radius="400" startValue="0" endValue="100" labelCount="11" colorFunction="return v>=35? (v>=65?'green':'yellow'):'red';">-->
    <Gauge2RadialScale font="50 Verdana bold" foreColor="green" radius="400" startValue="0" endValue="100" labelCount="11" colorFunction="return '#242C3C'">
      <Gauge2RadialNeedle id="needle" value="0" stroke="#BB2222" strokeWidth="1"
                          innerRadius="0" innerWidth="50"
                          outerRadius="360" outerWidth="5">
        <Gauge2RadialNeedle.Filler>
          <Gauge2RadialGradientFiller color1="#CC1111" color2="#FF6666"/>
        </Gauge2RadialNeedle.Filler>
      </Gauge2RadialNeedle>
    </Gauge2RadialScale>

    <!-- Cap -->
    <Gauge2BasicCap width="100" height="100">
      <Gauge2BasicCap.Filler>
        <Gauge2RingGradientFiller color1="#464646" color2="#A8A8A8" thickness="30" highlightCenter="0"/>
      </Gauge2BasicCap.Filler>
    </Gauge2BasicCap>

    <Gauge2BasicCap width="70" height="70">
      <Gauge2BasicCap.Filler>
        <Gauge2LinearGradientFiller color1="#666666" color2="#A8A8A8" angle="45"/>
      </Gauge2BasicCap.Filler>
    </Gauge2BasicCap>

  </Gauge2RadialRange>
</Gauge2>